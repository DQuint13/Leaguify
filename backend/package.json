{
  "name": "leaguify-backend",
  "version": "1.0.0",
  "description": "Backend API for League Statistics Website",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build:lambda": "npm rebuild sharp --platform=linux --arch=x64",
    "clean": "if exist .aws-sam rmdir /s /q .aws-sam",
    "clean:ps": "Remove-Item -Path .aws-sam -Recurse -Force -ErrorAction SilentlyContinue",
    "build": "npm run build:lambda && sam build",
    "build:container": "npm run build:lambda && sam build --use-container",
    "build:force": "npm run clean:ps && npm run build:lambda && sam build",
    "deploy": "sam deploy",
    "deploy:guided": "sam deploy --guided"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "serverless-http": "^3.2.0",
    "@aws-sdk/client-ssm": "^3.490.0",
    "@aws-sdk/client-s3": "^3.490.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
